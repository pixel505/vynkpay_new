<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar_new" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/color_red" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/directRefCard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:contentPadding="@dimen/_10sdp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toLeftOf="@+id/rytLn"
                                android:gravity="center"
                                android:orientation="vertical">


                                <com.vynkpay.custom.NormalTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Wallet"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />


                                <com.vynkpay.custom.NormalTextView
                                    android:id="@+id/walletText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/color_red"
                                    android:textSize="@dimen/_14sdp" />

                                <com.vynkpay.custom.NormalTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text="Available Balance"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.vynkpay.custom.NormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="Enter Details of User"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <com.vynkpay.custom.NormalEditText
                            android:id="@+id/searchUserEdt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/custom_rectangle"
                            android:focusable="false"
                            android:hint="Username"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textColor="@color/color_text"
                            android:textSize="@dimen/_12sdp" />

                        <com.vynkpay.custom.NormalTextView
                            android:visibility="gone"
                            android:id="@+id/packageTextt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:gravity="center"
                            android:text="Package"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/linPackage">
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/packageList"/>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:visibility="gone"
                            android:id="@+id/packageCard"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:contentPadding="@dimen/_10sdp">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toLeftOf="@+id/rytLn"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.vynkpay.custom.NormalTextView
                                        android:id="@+id/packageText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="@color/color_red"
                                        android:textSize="@dimen/_14sdp" />

                                    <com.vynkpay.custom.NormalTextView
                                        android:id="@+id/amountText"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text=""
                                        android:textSize="@dimen/_10sdp" />
                                    <com.vynkpay.custom.NormalTextView
                                        android:id="@+id/pointsText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text=""
                                        android:textSize="@dimen/_10sdp" />

                                </LinearLayout>


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/round_corner_red"
                            android:gravity="center">

                            <com.vynkpay.custom.NormalButton
                                android:id="@+id/getotp"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_20sdp"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="Get Otp"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/buttonText" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</layout>

