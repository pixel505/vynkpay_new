<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/mainBackColor"
        android:orientation="vertical">

        <include layout="@layout/toolbar_new_rcg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/colorPrimary"
                            android:padding="16dp">
                        </LinearLayout>

                    </FrameLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="-70dp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        app:cardElevation="@dimen/_5sdp"
                        android:layout_height="100dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.vynkpay.custom.BoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rs"
                                android:id="@+id/availableBalanceTV"
                                android:textSize="@dimen/_18sdp"
                                android:textColor="@color/colorPrimary" />

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/availableBalance"
                                android:textSize="@dimen/_14sdp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <com.vynkpay.custom.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/conversion"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:textSize="@dimen/_18sdp" />

                    <com.vynkpay.custom.NormalTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enteramonttobeconverted"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_24sdp"
                        android:textSize="@dimen/_12sdp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>
                    <!--android:background="@drawable/custom_rectangle"-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_24sdp"
                        android:orientation="vertical"
                        android:background="@drawable/custom_rectangle"
                        android:padding="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">
                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:text="MCash Amount"
                                android:textSize="@dimen/_12sdp" />
                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="@string/rs"
                                android:id="@+id/tvBalance"
                                android:gravity="right"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">
                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:text="Conversion Fee"
                                android:textSize="@dimen/_12sdp" />
                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="@string/rs"
                                android:id="@+id/tvConversionFee"
                                android:gravity="right"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">
                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:text="Converted Amount"
                                android:textSize="@dimen/_12sdp" />
                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:text="@string/rs"
                                android:gravity="right"
                                android:id="@+id/tvConvertedAmount"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.vynkpay.custom.NormalButton
                        android:id="@+id/submitButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/round_corner_red"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_24sdp"
                        android:layout_marginLeft="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/convert"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_16sdp"/>



                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>
    </LinearLayout>
</layout>
