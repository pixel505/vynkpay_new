<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar_new" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/color_red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:contentPadding="@dimen/_10sdp">

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:fillViewport="true">
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Total earning"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/sizeText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"

                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Bonus wallet balance"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/activeText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Bonus wallet recieved"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/inactiveText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Bonus wallet send"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/incomeText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Referral bonus"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/earningText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Generation bonus"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/activeDirecttext"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/bonusMainText"

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1.5"
                                android:gravity="start"
                                android:text="Global pool bonus"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/bonusText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="0.5"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Leardership bonus"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/globalText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Ambassadar bonus"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/ambassadarText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Appraisal bonus"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/appraisalText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/custom_rectangle"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.vynkpay.custom.NormalTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Chairman status"
                                android:textSize="@dimen/_12sdp" />

                            <com.vynkpay.custom.NormalTextView
                                android:id="@+id/chairmanText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
 </LinearLayout>
                    </ScrollView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>



