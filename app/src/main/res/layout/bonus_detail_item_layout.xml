<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/itemLinear"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/item_bg_round_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.vynkpay.custom.NormalLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/graycolor"
                android:textSize="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="@string/date_"/>

            <com.vynkpay.custom.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/dateTV"
                android:layout_marginStart="@dimen/_5sdp"
                android:textColor="@color/color_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.vynkpay.custom.NormalLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/graycolor"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/nameUserName"/>

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/nameUserNameTV"
                    android:textColor="@color/color_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_height="wrap_content">

                <com.vynkpay.custom.NormalLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/graycolor"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/fromUser"/>

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/fromNameUserNameTV"
                    android:gravity="end"
                    android:textColor="@color/color_text" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.vynkpay.custom.NormalLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/graycolor"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/level"/>

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/levelTV"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/color_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.vynkpay.custom.NormalLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/graycolor"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/amount"/>

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amountTV"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/color_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|end"
                android:layout_height="wrap_content">

                <com.vynkpay.custom.NormalLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/graycolor"
                    android:textSize="@dimen/_10sdp"
                    android:text="@string/status"/>

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/statusTV"
                    android:textColor="@color/colorGreen" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"/>


</LinearLayout>
