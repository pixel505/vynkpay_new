<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.vynkpay.custom.NormalTextView
                android:id="@+id/benAccountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <com.vynkpay.custom.NormalTextView
                android:id="@+id/benName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Beneficiary Name"
                android:textStyle="bold" />

            <com.vynkpay.custom.NormalTextView
                android:id="@+id/benBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name" />

            <com.vynkpay.custom.NormalTextView
                android:id="@+id/benIfsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IFSC" />

            <com.vynkpay.custom.NormalTextView
                android:id="@+id/benStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status : not verified"
                android:textColor="@color/color_red" />

            <com.vynkpay.custom.NormalButton
                android:id="@+id/benVerifyButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner_strokes"
                android:text="Verify" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="top|end"
            android:orientation="vertical">

            <com.vynkpay.custom.NormalButton
                android:id="@+id/benDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:text="Delete"
                android:background="@drawable/round_corner_strokes"
                />

        </FrameLayout>
    </LinearLayout>
    <com.vynkpay.custom.NormalTextView
        android:layout_width="match_parent"
        android:alpha=".5"
        android:visibility="gone"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
</androidx.cardview.widget.CardView>