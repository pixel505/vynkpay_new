<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/actualLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <FrameLayout
            android:id="@+id/llBeneficiaryLayout"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@drawable/box_bg">

            <com.vynkpay.custom.NormalTextView
                android:id="@+id/etBeneficiaryName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:digits="0123456789."
                android:gravity="center_vertical"
                android:hint="Select Beneficiary Name"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:textColor="@color/color_text"
                android:textColorHint="@color/hintColor"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_down" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/llToBeShownDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:paddingTop="10dp">

            <com.vynkpay.custom.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beneficiary Details : "
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.vynkpay.custom.NormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acc No."
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end">

                        <com.vynkpay.custom.NormalTextView
                            android:id="@+id/tvBeneficiaryAccountNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|end"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.vynkpay.custom.NormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IFSC"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end">

                        <com.vynkpay.custom.NormalTextView
                            android:id="@+id/tvBeneficiaryIFSC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|end"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.vynkpay.custom.NormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end">

                        <com.vynkpay.custom.NormalTextView
                            android:id="@+id/tvBeneficiaryMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.vynkpay.custom.NormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beneficiary Verification"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|end">

                        <com.vynkpay.custom.NormalTextView
                            android:id="@+id/tvBeneficiaryVerificationStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|end"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainBackColor"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@drawable/box_bg">

                <com.vynkpay.custom.NormalEditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:gravity="center_vertical"
                    android:hint="Enter Amount"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/color_text"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.vynkpay.custom.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:gravity="end|center_vertical"
                android:text="Left amount limit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/box_bg">

            <com.vynkpay.custom.NormalEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Description (Optional)"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textColor="@color/color_text"
                android:textColorHint="@color/hintColor"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <com.vynkpay.custom.NormalButton
        android:id="@+id/transferNowButton"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_all"
        android:gravity="center"
        android:text="Transfer Now"
        android:textColor="@color/buttonText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <com.vynkpay.custom.NormalButton
            android:id="@+id/addBeneficiaryButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/round_corner_strokes"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="+ Manage BENEFICIARY" />

    </LinearLayout>


</LinearLayout>

    <LinearLayout
        android:id="@+id/registerUserLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:background="@drawable/box_bg">

                    <com.vynkpay.custom.NormalEditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:hint="Enter First Name"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColor="@color/color_text"
                        android:textColorHint="@color/hintColor"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@drawable/box_bg">

                <com.vynkpay.custom.NormalEditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Enter Last Name"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/color_text"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@drawable/box_bg">

                <com.vynkpay.custom.NormalEditText
                    android:id="@+id/etPin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Enter your Area Pin Code"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="@color/color_text"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/box_bg">

                <com.vynkpay.custom.NormalEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="Enter Phone Number"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:maxLength="10"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/color_text"
                    android:textColorHint="@color/hintColor"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <com.vynkpay.custom.NormalButton
            android:id="@+id/submitButton"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/round_all"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/buttonText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttonsLinear"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.vynkpay.custom.NormalButton
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_all"
                    android:gravity="center"
                    android:text="Continue as ..."
                    android:id="@+id/continueAsButton"
                    android:paddingEnd="16dp"
                    android:textAllCaps="false"
                    android:paddingStart="16dp"
                    android:textColor="@color/buttonText" />

                <com.vynkpay.custom.NormalButton
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_all"
                    android:gravity="center"
                    android:paddingEnd="16dp"
                    android:textAllCaps="false"
                    android:id="@+id/startWithButton"
                    android:paddingStart="16dp"
                    android:text="Start with Different name"
                    android:textColor="@color/buttonText" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <com.vynkpay.custom.NormalBoldTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/thTV"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:text="Transactions history"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/dmtHistoryRecyclerView"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/otpLinear"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <com.vynkpay.custom.NormalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:textColor="@color/color_text"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_corner_strokes"
            android:gravity="center"
            android:padding="20dp">

            <com.vynkpay.custom.NormalEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/etOtp"
                android:inputType="number"
                android:maxLength="6"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="OTP" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corner_blue"
            android:gravity="center"
            android:padding="16dp">

            <com.vynkpay.custom.NormalButton
                android:id="@+id/verifyButton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Verify"
                android:textColor="@color/buttonText" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>