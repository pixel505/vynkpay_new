<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_20sdp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"/>

            <FrameLayout
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/reques_icon"
                    android:tint="@color/colorPrimary"/>

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="end|top"
                    android:background="@drawable/ic_lens_white"
                    android:src="@drawable/ic_check_circle"/>
            </FrameLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>

            <com.vynkpay.custom.NormalBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textAllCaps="true"
                android:text="@string/requestSubmitted"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"/>

            <com.vynkpay.custom.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/graycolor"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Your withdrawal request has been sent successfully."/>

            <com.vynkpay.custom.NormalButton
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/round_corner_red"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/done"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_16sdp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
