<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.activities.TransferToken">

        <include layout="@layout/toolbar_new"
            android:id="@+id/toolbarLayout"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/square_shape_white">

            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/tokentrnsfr"/>

            <com.vynkpay.custom.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/semi_black"
                android:id="@+id/messageTV"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


        <com.vynkpay.custom.NormalTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:text="...."
            android:visibility="gone"
            android:id="@+id/timeLeftTV"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/buttonbg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/agreeLayout"
            android:visibility="gone"
            android:orientation="horizontal">

            <com.vynkpay.custom.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:paddingStart="@dimen/_25sdp"
                android:gravity="center"
                android:textAllCaps="true"
                android:id="@+id/agreeTV"
                android:text="Agree"
                android:background="@color/colorAccent"/>

            <com.vynkpay.custom.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:paddingStart="@dimen/_25sdp"
                android:gravity="center"
                android:text="Cancel"
                android:id="@+id/cancelTV"
                android:textAllCaps="true"
                android:background="@color/hintColortr"/>

        </LinearLayout>

    </LinearLayout>
</layout>