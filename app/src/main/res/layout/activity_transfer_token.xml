<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.activities.TransferToken">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:padding="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backIV"
                android:src="@drawable/ic_back_arrow"/>

            <com.vynkpay.custom.NormalTextView
                android:id="@+id/toolbarTitle"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/backIV"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/white" />

            <com.vynkpay.custom.NormalTextView
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="@dimen/_12sdp"
                android:text="Transfer History"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/transferHistory"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textColor="@color/white" />

        </RelativeLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/square_shape_white">

            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/tokentrnsfr"/>

            <com.vynkpay.custom.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/semi_black"
                android:id="@+id/messageTV"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


        <com.vynkpay.custom.NormalTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:text="...."
            android:visibility="gone"
            android:id="@+id/timeLeftTV"
            android:layout_margin="@dimen/_10sdp"
            android:background="#1B52CD"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/agreeLayout"
            android:visibility="gone"
            android:orientation="horizontal">

            <com.vynkpay.custom.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:paddingStart="@dimen/_25sdp"
                android:gravity="center"
                android:textAllCaps="true"
                android:id="@+id/agreeTV"
                android:text="Agree"
                android:background="#1B52CD"/>

            <com.vynkpay.custom.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:paddingStart="@dimen/_25sdp"
                android:gravity="center"
                android:text="Cancel"
                android:id="@+id/cancelTV"
                android:textAllCaps="true"
                android:background="@color/color_red"/>

        </LinearLayout>

    </LinearLayout>
</layout>