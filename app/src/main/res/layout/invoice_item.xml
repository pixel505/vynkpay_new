<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardBackgroundColor="#F8F8F8"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/invoice"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.vynkpay.custom.NormalTextView
                            android:id="@+id/nameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daljeet Singh"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />


                        <com.vynkpay.custom.NormalTextView
                            android:id="@+id/nameryttext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="(Daljeet007)"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <com.vynkpay.custom.NormalTextView
                        android:id="@+id/invoiceNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Daljeet007)"
                        android:textSize="@dimen/_10sdp" />
                    <com.vynkpay.custom.NormalTextView
                        android:id="@+id/purchaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Daljeet007)"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <com.vynkpay.custom.NormalTextView
                        android:id="@+id/payment"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="5151315"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_corner_red"
                        android:gravity="center">

                        <com.vynkpay.custom.NormalButton
                            android:id="@+id/viewInvoice"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="View"
                            android:textSize="@dimen/_10sdp"
                            android:textAllCaps="false"
                            android:textColor="@color/buttonText" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>