<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.activities.ChainTransactionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backIV"
            android:src="@drawable/ic_back_arrow"/>

        <com.vynkpay.custom.NormalTextView
            android:id="@+id/toolbarTitle"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_toStartOf="@+id/transfertoken"
            android:ellipsize="end"
            android:layout_toEndOf="@+id/backIV"
            android:gravity="center_vertical"
            android:textSize="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white" />

        <com.vynkpay.custom.NormalTextView
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            android:text="Transfer Token"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/transfertoken"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:background="@color/semi_white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_20sdp"/>

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/txnTV"
                    android:text="TNX NO"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tokenTV"
                    android:textSize="@dimen/_10sdp"
                    android:text="TOKENS"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="end">

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="end"
                    android:id="@+id/amountTV"
                    android:text="AMOUNT"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/chainRV"/>

        <ProgressBar
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:visibility="gone"
            android:id="@+id/progress"
            android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>
</layout>