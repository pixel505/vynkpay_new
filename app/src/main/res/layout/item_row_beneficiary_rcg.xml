<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.vynkpay.custom.NormalTextView
                android:id="@+id/benName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Beneficiary Name"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:orientation="vertical">

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acccount No"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.vynkpay.custom.NormalTextView
                    android:id="@+id/benAccountNumber"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:orientation="vertical">

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Status"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.vynkpay.custom.NormalTextView
                    android:id="@+id/benStatus"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <com.vynkpay.custom.NormalTextView
                    android:id="@+id/benBankName"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:gravity="end"
                android:orientation="vertical">

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IFSC Code"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.vynkpay.custom.NormalTextView
                    android:id="@+id/benIfsc"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="IFSC" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.vynkpay.custom.NormalButton
                    android:id="@+id/benVerifyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_corner_strokes"
                    android:text="Verify" />


                <com.vynkpay.custom.NormalButton
                    android:id="@+id/benDeleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:background="@drawable/round_corner_strokes"
                    android:text="Delete" />

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <com.vynkpay.custom.NormalButton
                    android:id="@+id/benTransferButton"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:background="@drawable/round_corner_strokes"
                    android:text="Transfer" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>