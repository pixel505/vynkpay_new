<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp">

               <ImageView
                   android:layout_width="@dimen/_40sdp"
                   android:layout_height="@dimen/_40sdp"
                   android:src="@drawable/logo"/>
                <com.vynkpay.custom.NormalTextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/black"/>
                <com.vynkpay.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/loginacc"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp" />

                <com.vynkpay.custom.NormalEditText
                    android:paddingRight="@dimen/_10sdp"
                    android:id="@+id/etLoginText"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/custom_rectangle"
                    android:hint="Enter your Username"
                    android:layout_marginTop="@dimen/_15sdp"/>



                <FrameLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:background="@drawable/custom_rectangle"
                        android:gravity="center">

                        <com.vynkpay.custom.NormalEditText
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:padding="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/custom_rectangle"
                            android:hint="Password"
                            android:textSize="@dimen/_12sdp"
                            android:id="@+id/etPassword"
                            android:layout_marginRight="@dimen/_40sdp"

                          />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="end|center_vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/showHideImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_view" />
                    </LinearLayout>

                </FrameLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/round_corner_red"
                    android:gravity="center">

                    <com.vynkpay.custom.NormalButton
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:text="Login"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/buttonText" />

                </LinearLayout>


                <com.vynkpay.custom.NormalTextView
                    android:id="@+id/loginascustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/loginascustomer" />

                <com.vynkpay.custom.NormalTextView
                    android:id="@+id/signUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/sign" />

                <com.vynkpay.custom.NormalTextView
                    android:id="@+id/forgotPasswordTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/forgotPassword" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>