<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/leftLn"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/logo" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/leftAttch"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/attach"
                        android:layout_gravity="center"/>
                    <com.vynkpay.custom.NormalTextView
                        android:layout_marginStart="@dimen/_3sdp"
                        android:id="@+id/rightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cccccccccccccccc"
                        android:gravity="start"

                        android:textColor="@color/color_red"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/testrect"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                   >



                    <com.vynkpay.custom.NormalTextView
                        android:id="@+id/leftmsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="hi"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"  />
                </LinearLayout>
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="-1.5dp"
                        android:background="@drawable/custombubble" />

                    <com.vynkpay.custom.NormalTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="1 july 2020 5:30PM"
                        android:id="@+id/leftTime"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp" />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/rightLn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_marginStart="@dimen/_20sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                   android:layout_marginStart="@dimen/_40sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/rightAttch"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_40sdp"
                        android:visibility="visible"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/attach"
                            android:layout_gravity="center"/>
                 <com.vynkpay.custom.NormalTextView
                     android:layout_marginStart="@dimen/_3sdp"
                     android:id="@+id/pathText"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="vvvvvv"
                     android:gravity="end"
                     android:textColor="@color/color_red"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/testrecty"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">



                        <com.vynkpay.custom.NormalTextView
                            android:id="@+id/rightmsg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="h"
                            android:textSize="@dimen/_12sdp"

                            android:textColor="@color/white" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="-4.5dp"
                        android:layout_marginRight="4.5dp"
                        android:background="@drawable/testcornery"
                        android:rotation="90" />

                    <com.vynkpay.custom.NormalTextView
                          android:gravity="end"
                        android:layout_width="match_parent"
                        android:id="@+id/rightTime"
                        android:layout_height="wrap_content"
                        android:text="1 july 2020 5:30PM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_6sdp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/receiver" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</layout>