<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:src="@drawable/success_registration_icon" />

        <com.vynkpay.custom.NormalTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regsucess"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"/>

        <com.vynkpay.custom.NormalTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrationSuccessString"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/round_corner_red"
            android:gravity="center">

            <com.vynkpay.custom.NormalButton
                android:id="@+id/loginBtnNew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Login"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/buttonText" />

        </LinearLayout>






    </LinearLayout>

</LinearLayout>




