<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarLayout"

            layout="@layout/toolbar_new" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/kycImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <com.vynkpay.custom.NormalBoldTextView
                android:id="@+id/kycText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_13sdp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <com.vynkpay.custom.NormalTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/kyctext"
                android:textSize="@dimen/_10sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="@drawable/round_corner_red"
                android:gravity="center">

                <com.vynkpay.custom.NormalButton
                    android:id="@+id/startVerificationBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/buttonText"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <com.vynkpay.custom.NormalTextView

                android:id="@+id/bitAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="BTC Address"
                android:textAllCaps="false"
                android:textColor="@color/color_red"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone" />


            <com.vynkpay.custom.NormalTextView

                android:id="@+id/bankdetailsBtnn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Bank Details"
                android:textAllCaps="false"
                android:textColor="@color/color_red"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>
</layout>
