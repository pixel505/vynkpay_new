<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/headerbg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/globalImage"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/dummy"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_5sdp" />


                    <com.vynkpay.custom.NormalBoldTextView
                        android:id="@+id/globalUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="xfbxbfb"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <com.vynkpay.custom.NormalTextView
                        android:text="xfbxbfb"
                        android:id="@+id/globalUserId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />


                    <com.vynkpay.custom.NormalLightTextView
                        android:text="xfbxbfb"
                        android:id="@+id/globalEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_160sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_10sdp"
                            app:cardBackgroundColor="#d9eafc"
                            app:cardCornerRadius="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:src="@drawable/feeds" />

                                <com.vynkpay.custom.NormalTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="Hello welcome VynkPay wallet app"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/walletLinear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_70sdp"
                                android:id="@+id/crdBouns"
                                android:layout_weight="2"
                                app:cardElevation="0dp">


                                <LinearLayout
                                    android:id="@+id/bonusLinear"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bwallet"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.vynkpay.custom.NormalTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bonus Wallet"
                                        android:id="@+id/tvBCash"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_2sdp"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:background="@color/colorBlack"></View>

                                    <com.vynkpay.custom.NormalTextView
                                        android:id="@+id/bonusWalletText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="2"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:id="@+id/mCashLinear"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/mwallet"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.vynkpay.custom.NormalTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MCash Wallet"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_2sdp"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:background="@color/colorBlack"></View>

                                    <com.vynkpay.custom.NormalTextView
                                        android:id="@+id/vCashWalletText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_weight="2"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:id="@+id/vCashLinear"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/vwallet"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.vynkpay.custom.NormalTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="VCash Wallet"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_2sdp"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:background="@color/colorBlack"></View>

                                    <com.vynkpay.custom.NormalTextView
                                        android:id="@+id/mCashWalletText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/viewPagerFrame"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginTop="@dimen/_10sdp">

                            <pl.pzienowicz.autoscrollviewpager.AutoScrollViewPager
                                android:id="@+id/viewPager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:animateLayoutChanges="true" />

                            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                                android:id="@+id/tabLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:layout_marginBottom="@dimen/_10sdp"
                                app:dotsColor="@android:color/darker_gray"
                                app:dotsCornerRadius="8dp"
                                app:dotsSize="8dp"
                                app:dotsSpacing="4dp"
                                app:dotsWidthFactor="2.5"
                                app:progressMode="false"
                                app:selectedDotColor="@color/colorAccent" />

                        </FrameLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:background="@android:color/transparent">
                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    </LinearLayout>


