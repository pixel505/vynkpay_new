<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar_new" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.vynkpay.custom.NormalBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Pan Card"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.vynkpay.custom.NormalBoldTextView
                    android:visibility="gone"
                    android:id="@+id/panPending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text=""
                    android:gravity="end"
                    android:textColor="@color/colorYellow"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/uploadPanLn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/stroke_ln"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/panImage"
                    android:visibility="gone"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:orientation="vertical"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upload" />

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Upload Pan Card Image"
                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <com.vynkpay.custom.NormalBoldTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:text="Aadhar Card"
                   android:textColor="@color/black"
                   android:textSize="@dimen/_12sdp" />

               <com.vynkpay.custom.NormalBoldTextView
                   android:visibility="gone"
                   android:id="@+id/aadharPending"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:text=""
                   android:gravity="end"
                   android:textColor="@color/colorYellow"
                   android:textSize="@dimen/_12sdp" />
           </LinearLayout>


            <LinearLayout
                android:id="@+id/uploadAdharLn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/stroke_ln"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aadharImage"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:scaleType="fitXY"

                    android:orientation="vertical"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upload" />

                <com.vynkpay.custom.NormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Upload Aadhar Card Image"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>


            <LinearLayout
              android:id="@+id/bLn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_corner_red"
                android:gravity="center">

                <com.vynkpay.custom.NormalButton
                    android:id="@+id/nextLn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/buttonText"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
            <com.vynkpay.custom.NormalTextView
                android:id="@+id/bankDetailText"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Bank Details"
                android:textAllCaps="false"
                android:textColor="@color/color_red"
                android:textSize="@dimen/_14sdp" />
            <View android:layout_width="match_parent"
                android:background="@color/color_red"
                android:layout_height="@dimen/_1sdp"
                /></LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>



